<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/jkc_bg"
    android:id="@+id/jklayout" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg"
        android:orientation="horizontal"
                >
        <!-- 添加 返回 按钮 -->
        <ImageButton
            android:id="@+id/jk_huitui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:src="@drawable/huitui"
            android:contentDescription="@string/describe"
            android:layout_marginStart="5dp"
            />
		
        <!-- 添加 信封 文本 -->
        
        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="@string/jk_xinfeng"
            android:textSize="25sp" 
            android:gravity="center"
            android:paddingTop="5dp"/>
        
        <!-- 添加 增加 文本 -->
        
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:src="@drawable/add"
            android:layout_marginEnd="2dp"
            android:contentDescription="@string/describe"
            android:onClick="createjinku"
            />
        
    </LinearLayout>
    
    <GridView 
        android:id="@+id/gv_jinku_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:horizontalSpacing="20dp"
        android:verticalSpacing="10dp"
        ></GridView>
    

</LinearLayout>
