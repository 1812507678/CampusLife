<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xcitlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/xc_bg">

    <TextView
        android:id="@+id/xc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xcf_item1"
        android:layout_gravity="center"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/xcitlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/xci_img1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:contentDescription="@string/describe" />

        <ImageView
            android:id="@+id/xci_img2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
             android:contentDescription="@string/describe"
             />

        <ImageView
            android:id="@+id/xci_img3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:contentDescription="@string/describe" />

        <ImageView
            android:id="@+id/xci_img4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:contentDescription="@string/describe" />
    </LinearLayout>

</LinearLayout>