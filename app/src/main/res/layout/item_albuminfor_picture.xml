<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_albuminfo_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_albuminfo_picture1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/describe" />

        <ImageView
            android:id="@+id/iv_albuminfo_picture2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/describe"
            />

        <ImageView
            android:id="@+id/iv_albuminfo_picture3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/describe" />

        <ImageView
            android:id="@+id/iv_albuminfo_picture4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/describe" />
    </LinearLayout>



</LinearLayout>