<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/firsbg"
    tools:context="com.hainiu.campuslife.activity.LoginActivity">

    <ImageView
        android:id="@+id/iv_login_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_login_phoneinput"
        android:orientation="horizontal"
        android:layout_below="@id/iv_login_logo"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="账号"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textSize="20sp"/>

        <EditText
            android:background="@drawable/inputtext_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入手机号"
            android:textColorHint="#878787"
            android:layout_marginRight="20dp"
            android:id="@+id/ed_login_phone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_login_passinput"
        android:layout_below="@id/ll_login_phoneinput"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="#FFF"
            android:inputType="textPassword"
            android:textColorHint="#878787"
            android:hint="请输入密码"
            android:layout_marginRight="20dp"
            android:background="@drawable/inputtext_background"
            android:id="@+id/ed_login_password"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_login_passinput"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:id="@+id/ll_login_remember">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textColor="#EE3B3B"
            android:textSize="15sp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ck_login_savepassword"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_initpage_login"
        android:layout_marginLeft="10dp"
        android:text="登陆"
        android:onClick="login"
        android:background="@drawable/bt_background"
        android:layout_below="@id/ll_login_remember"
        android:layout_marginTop="34dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_iv_initpage_registerandforget"
        android:layout_below="@id/bt_initpage_login"
        android:orientation="horizontal"
        android:padding="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="注册"
            android:gravity="center"
            android:onClick="toRegister"
            android:textColor="#FFF"
            android:textSize="15sp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="忘记密码"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="15sp"
            android:onClick="forgetPassword"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <!-- 微博和QQ登录  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/third_login_weibo"
            android:onClick="weiboLogin"
            android:id="@+id/button_weibo_login"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/button_qq_login"
            android:layout_marginEnd="25dp" />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/third_login_qq"
            android:onClick="qqLogin"
            android:id="@+id/button_qq_login"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="127dp" />

    </RelativeLayout>

</RelativeLayout>
