<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sjlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bq_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/sjlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/sj_huitui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#0fff"
            android:contentDescription="@string/describe"
            android:src="@drawable/huitui" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/bq_top"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/sj_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#0fff"
            android:contentDescription="@string/describe"
            android:src="@drawable/add"
            android:onClick="additem" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sjlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         >

        <ListView
            android:id="@+id/lv_bainqian_showbianqian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" >
        </ListView>
    </LinearLayout>

</LinearLayout>